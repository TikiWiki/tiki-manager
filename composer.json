{
  "name": "tikiwiki/tiki-manager",
  "description": "Tiki Wiki CMS Groupware",
  "license": "LGPL-2.1",
  "homepage": "https://tiki.org",
  "minimum-stability": "stable",
  "require": {
    "ext-bz2": "*",
    "ext-json": "*",
    "ext-pdo": "*",
    "composer/semver": "^3.2",
    "dragonmantank/cron-expression": "^3.0",
    "gitonomy/gitlib": "^1.2",
    "laminas/laminas-mail": "^2.12",
    "laminas/laminas-servicemanager": "^3.4",
    "monolog/monolog": "^1.26",
    "php": "^7.1",
    "phpseclib/phpseclib": "^2.0",
    "psr/log": "^1.1",
    "symfony/console": "^3.4 || ^4.1",
    "symfony/dependency-injection": "^4.4",
    "symfony/event-dispatcher": "^4.1",
    "symfony/http-client": "^4.1",
    "symfony/dotenv": "^4.3",
    "symfony/finder": "4.4",
    "symfony/filesystem": "^3.4 || ^4.1",
    "symfony/process": "^3.4 || ^4.3",
    "symfony/yaml": "^3.4 || ^4.3"
  },
  "config": {
    "discard-changes": true,
    "process-timeout": 5000,
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    }
  },
  "autoload": {
    "psr-4": {
      "TikiManager\\": "src/",
      "TikiManager\\Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.tiki.org"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "squizlabs/php_codesniffer": "^3.3",
    "bamarni/composer-bin-plugin": "^1.3",
    "mikey179/vfsstream": "^1.6"
  },
  "scripts": {
    "tests": [
      "find scripts src -name '*.php' -exec php -l {} \\;",
      "./vendor/bin/phpunit --bootstrap src/env_includes.php tests"
    ],
    "build-phar": [
      "git log -n 1 --format='{\"version\":\"%h\", \"date\":\"%cI\"}' > .version",
      "mkdir -p build",
      "box compile"
    ]
  }
}
